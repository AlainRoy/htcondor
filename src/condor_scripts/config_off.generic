-------- Do not delete this line, awk uses it ---------------------
echo "Configuring condor off... "

set RELEASEDIR = InstallDir
set CONFIG_VAL=$RELEASEDIR/bin/config_val
eval `$CONFIG_VAL LOCAL_CONFIG_FILE`

grep ^START_DAEMONS $LOCAL_CONFIG_FILE >& /dev/null || \
	echo START_DAEMONS >> $LOCAL_CONFIG_FILE

chmod 664 $LOCAL_CONFIG_FILE

ex - $LOCAL_CONFIG_FILE << EOF
/^START_DAEMONS/c
START_DAEMONS = False
.
x
EOF

echo "The new situation:"
grep ^START_DAEMONS $LOCAL_CONFIG_FILE
