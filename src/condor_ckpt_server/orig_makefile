#-> C++ Compiler
C++ = /usr/psup/gcc/bin/g++

#-> C Compiler
CC = /usr/psup/gcc/bin/g++

#-> C++ Compiler Options
OPTIONS = -g -Wall

#-> Object Files Created/Used by "make"
OBJS = server_network.o server_filestat.o server_xferstat.o server.o 

#-> Library Object Files
LIB = 


#---------------- Dependencies and Object File Creation ----------------

all: $(OBJS)
	$(C++) -v $(OPTIONS) $(OBJS) $(LIB) -lm -o server 

server_network.o: server_network.c server_network.h server_constants.h Makefile
	$(CC) -c $(OPTIONS) server_network.c

server_filestat.o: server_typedefs.h server_constants.h server_network.h server_filestat.h server_filestat.C Makefile
	$(C++) -c $(OPTIONS) server_filestat.C

server_xferstat.o: server_xferstat.h server_xferstat.C server_constants.h server_network.o server_filestat.o Makefile
	$(C++) -c $(OPTIONS) server_xferstat.C

server.o: server.C server.h server_network.o server_filestat.o server_xferstat.o server_constants.h server_typedefs.h Makefile
	$(C++) -c $(OPTIONS) server.C

