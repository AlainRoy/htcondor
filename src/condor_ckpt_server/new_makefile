#	$(C++) -c $(OPTIONS) server_filestat.C

imds2.o: fileinfo2.o fileindex2.o imds2.C imds2.h network2.o Makefile
	$(C++) -c $(OPTIONS) imds2.C

testindex.o: testindex.C imds2.o Makefile
	$(C++) -c $(OPTIONS) testindex.C

