#-> C++ Compiler
C++ = /usr/psup/gcc/bin/g++

#-> C Compiler
CC = /usr/psup/gcc/bin/gcc

#-> C++ Compiler Options
OPTIONS = -g -Wall

#-> Object Files Created/Used by "make"
#OBJS = server_network.o server_filestat.o server_xferstat.o server.o 
#OBJS = gen_lib.o network2.o imds2.o xferstat2.o
OBJS = network2.o gen_lib.o fileinfo2.o fileindex2.o imds2.o testindex.o

#-> Library Object Files
LIB = 


#---------------- Dependencies and Object File Creation ----------------

all: $(OBJS)
	$(C++) -v $(OPTIONS) $(OBJS) $(LIB) -lm -o testindex 

gen_lib.o: gen_lib.h gen_lib.C Makefile
	$(C++) -c $(OPTIONS) gen_lib.C

network2.o: typedefs2.h network2.c constants2.h Makefile
	$(CC) -c -v $(OPTIONS) network2.c

fileinfo2.o: gen_lib.o typedefs2.h constants2.h network2.o fileinfo2.h fileinfo2.C Makefile
	$(C++) -c $(OPTIONS) fileinfo2.C

fileindex2.o: gen_lib.o typedefs2.h constants2.h fileindex2.h fileindex2.C Makefile
	$(C++) -c $(OPTIONS) fileindex2.C

