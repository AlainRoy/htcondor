# we can change this later...
NAME = condor_starter
RSH_NAME = rsh
WRAPPER_CLASS = CondorJavaWrapper.class
INFO_CLASS = CondorJavaInfo.class
BENCHMARK_CLASS = scimark2lib.jar

all_target($(NAME) $(RSH_NAME) condor_gridshell)

CFLAGS = $(STD_C_FLAGS)
C_PLUS_FLAGS = $(STD_C_PLUS_FLAGS)

LIB = $(DAEMONCORE_LIB) $(STD_LIBS)
RSH_LIB = $(STD_LIBS) $(CLASSAD_LIB)

#if IS_SGI_IRIX62
OS = IRIX62
#elif IS_SGI_IRIX65
OS = IRIX65
#else
OS = OperatingSystem
#endif

# this can (and will have to) be made better, but
# it will suffice for now:
OBJ = starter_v61_main.o starter.o NTsenders.o user_proc.o \
	os_proc.o vanilla_proc.o mpi_master_proc.o mpi_comrade_proc.o \
	script_proc.o \
	starter_v61_instantiate.o io_proxy.o io_proxy_handler.o \
	java_proc.o java_detect.o tool_daemon_proc.o local_user_log.o \
	job_info_communicator.o jic_shadow.o jic_local.o \
	jic_local_config.o jic_local_file.o stream_handler.o \
	sshd_proc.o

RSH_OBJ = condor_rsh.o

c_plus_target($(NAME),$(OBJ),$(LIB))
c_plus_target($(RSH_NAME),$(RSH_OBJ),$(RSH_LIB))
release_target($(NAME),sbin,EXECUTABLE_MODE)
release_target($(RSH_NAME),libexec,EXECUTABLE_MODE)
strip_target($(NAME),sbin,EXECUTABLE_MODE)
strip_target($(RSH_NAME),libexec,EXECUTABLE_MODE)
static_target($(NAME),$(OBJ),$(LIB),$(STATIC_DIR)/sbin)
static_target($(RSH_NAME),$(RSH_OBJ),$(RSH_LIB),$(STATIC_DIR)/libexec)
pure_c_plus_target($(NAME).pure,$(OBJ),$(LIB))
purecov_c_plus_target($(NAME).pc,$(OBJ),$(LIB))
html_target( starter.h user_proc.h os_proc.h vanilla_proc.h )

release_copy_target($(WRAPPER_CLASS),lib,$(WRAPPER_CLASS),EXECUTABLE_MODE)
strip_copy_target($(WRAPPER_CLASS),lib,$(WRAPPER_CLASS),EXECUTABLE_MODE)
static_copy_target($(WRAPPER_CLASS),lib,$(WRAPPER_CLASS),EXECUTABLE_MODE)

release_copy_target($(INFO_CLASS),lib,$(INFO_CLASS),EXECUTABLE_MODE)
strip_copy_target($(INFO_CLASS),lib,$(INFO_CLASS),EXECUTABLE_MODE)
static_copy_target($(INFO_CLASS),lib,$(INFO_CLASS),EXECUTABLE_MODE)

release_copy_target($(BENCHMARK_CLASS),lib,$(BENCHMARK_CLASS),EXECUTABLE_MODE)
strip_copy_target($(BENCHMARK_CLASS),lib,$(BENCHMARK_CLASS),EXECUTABLE_MODE)
static_copy_target($(BENCHMARK_CLASS),lib,$(BENCHMARK_CLASS),EXECUTABLE_MODE)

clean::
	rm -f condor_gridshell

condor_gridshell: condor_starter
	rm -f condor_gridshell
	ln condor_starter condor_gridshell

release_link_target($(RELEASE_DIR)/sbin/condor_starter,sbin,condor_gridshell)
strip_link_target($(STRIP_DIR)/sbin/condor_starter,sbin,condor_gridshell)
static_link_target($(STATIC_DIR)/sbin/condor_starter,sbin,condor_gridshell)
