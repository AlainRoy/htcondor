
terminate_all
	request_exit_all()
	set_alarm( TERMINATE_TIMEOUT )
	while( unterminated_user_jobs )
		wait()
	cancel_alarm()

spawn_new_job
	spawn( NewJob )
	if( suspended_alarm )
		resume_alarm()
	else
		set_alarm()

spawn_all
	while( runnable_jobs )
		spawn( SomeJob )
	update_ckpt_timer()
	set_alarm()
	
handle_vacate_req
	if( alarm_is_set )
		cancel_alarm()
	stop_all()
	set_quit()

handle_sync_ckpt
	cancel_alarm()
	stop_all()
