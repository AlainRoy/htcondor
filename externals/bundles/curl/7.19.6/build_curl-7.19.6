#! /bin/sh

. $EXTERNALS_CONFIG

cd $PACKAGE_NAME

if [ `uname` = SunOS ]
then
LIBS=-ldl ./configure --prefix=$PACKAGE_INSTALL_DIR --disable-shared --without-ssl --with-zlib=$EXTERNALS_INSTALL_DIR/$EXT_ZLIB_DIR --disable-ipv6
else
./configure --prefix=$PACKAGE_INSTALL_DIR --disable-shared --without-ssl --with-zlib=$EXTERNALS_INSTALL_DIR/$EXT_ZLIB_DIR --disable-ipv6
fi

if [ $? -ne 0 ]
then
	echo "configure failed"
	exit 1
fi

make
if [ $? -ne 0 ]
then
	echo "make failed"
	exit 1
fi

make install
if [ $? -ne 0 ]
then
	echo "make failed"
	exit 1
fi
